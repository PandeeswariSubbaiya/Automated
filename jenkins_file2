pipeline {
    agent any
    stages {
        stage('checkout source branch') {
                steps {
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/PandeeswariSubbaiya/Automated.git', credentialsId: 'Jenkins_Github']]])
                }
            }
             stage('Merge changes') {
                steps {
                    sh 'git checkout main'
                    sh 'git merge dev'
                }
             }
             stage('Create pull request') {
                steps {
                    script {
                        def response = sh(
                            script: 'curl -d \'{ "title": "Merge changes from dev to main", "head": "main", "base": "dev" }\' -H "Authorization: token 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" -H "Content-Type: application/json" https://api.github.com/repos/PandeeswariSubbaiya/Automated/pulls',
                            returnStdout: true
                        )
                        println response
                    }
                }
            }
        }
    }
