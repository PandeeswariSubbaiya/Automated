pipeline {
    agent any
    stages {
        stage('checkout source branch') {
                steps {
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/PandeeswariSubbaiya/Automated.git', credentialsId: 'Jenkins_Github']]])
                }
            }
             stage('Merge changes') {
                steps {
                    sh 'git checkout main'
                    sh 'git merge dev'
                }
             }
        stage('Create pull request') {
            steps {
                withCredentials([string(credentialsId: 'Jenkins_Github', variable: 'Jenkins_Github')]) {
                    sh '''
                        curl -d '{"title": "Merge changes from dev to main", "head": "dev", "base": "main"}' -H "Authorization: token $Jenkins_Github" -H "Content-Type: application/json" https://api.github.com/repos/PandeeswariSubbaiya/Automated/pulls
                    '''
                    }
                }
            }
        }
    }
